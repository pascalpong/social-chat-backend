// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  name          String?
  username      String   @unique
  password      String

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  deletedAt     DateTime?

  sentMessages  Messages[] @relation("SentMessages")
  receivedMessages Messages[] @relation("ReceivedMessages")
}

model Messages {
  id            Int      @id @default(autoincrement())
  message       String

  sentByUserId  Int
  sentBy        Users    @relation("SentMessages", fields: [sentByUserId], references: [id])
  sentToUserId  Int
  sentTo        Users    @relation("ReceivedMessages", fields: [sentToUserId], references: [id])

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  deletedAt     DateTime? 
}
